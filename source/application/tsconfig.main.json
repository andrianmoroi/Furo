{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "sourceMap": false,
      "outDir": "../../build/application",
      "baseUrl": ".",
      "paths": {
        "electron": ["node_modules/electron"]
      }
    },
    "include": ["."]
  }